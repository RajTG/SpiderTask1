<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.spiderapp1.MainActivity">


    <EditText
        android:id="@+id/TxtOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:autoText="true"
        android:elevation="2dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        app:layout_editor_absoluteX="10dp"
        app:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="77dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/TxtOne"
        android:layout_alignEnd="@+id/TxtOne" />

    <ListView
        android:id="@+id/lisOne"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_below="@+id/btOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        tools:background="@android:drawable/alert_light_frame"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="146dp" />

</RelativeLayout>
